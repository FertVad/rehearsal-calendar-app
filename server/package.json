{
  "name": "rehearsal-calendar-backend",
  "version": "1.0.0",
  "description": "Backend for Rehearsal Calendar Native App",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
